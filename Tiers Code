-- Lock or Unlock buildings on game start / game load
function OnMsg.GameTimeStart()

	if IsTechResearched("Low G Engineering") == nil then
		LockBuilding("Tier 2 Dome")
	else
		UnlockBuilding("Tier 2 Dome")
	end
	
end

function OnMsg.LoadGame()

	if IsTechResearched("Low G Engineering") == nil then
		LockBuilding("Tier 2 Dome")
	else
		UnlockBuilding("Tier 2 Dome")
	end
	
end

-- Unlock buildings when tech is researched
function OnMsg.TechResearched(tech_id,city,first_time)

	if tech_id == "Low G Engineering" then
		UnlockBuilding("Tier 2 Dome")
	end
	
end
